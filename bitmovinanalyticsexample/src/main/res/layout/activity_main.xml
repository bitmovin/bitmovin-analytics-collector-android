<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitmovin.bitmovinanalyticsexample.MainActivity">

    <com.bitmovin.player.BitmovinPlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bitmovinPlayerView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/release_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release"
            />
        <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            />

        <Button
            android:id="@+id/change_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/exo_track_selection_title_audio" />

        <Button
            android:id="@+id/change_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change Source" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
