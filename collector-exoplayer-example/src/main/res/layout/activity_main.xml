<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    android:keepScreenOn="true"
    tools:context="com.bitmovin.analytics.exoplayer.example.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/release_button"
                    android:layout_width="194dp"
                    android:layout_height="match_parent"
                    android:text="Release" />

                <Button
                    android:id="@+id/create_button"
                    android:layout_width="215dp"
                    android:layout_height="match_parent"
                    android:text="Create" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/source_change_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Change Source" />

                <Button
                    android:id="@+id/set_custom_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Set custom data" />
            </TableRow>

        </TableLayout>

        <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/a_main_exoplayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5">

        </com.google.android.exoplayer2.ui.PlayerView>

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5">

            <ScrollView
                    android:id="@+id/verticalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/eventLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

            </ScrollView>

        </HorizontalScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
